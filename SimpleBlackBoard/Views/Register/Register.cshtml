@using SimpleBlackBoard.Models;
@model Tuple<Student, Lecturer>
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@Html.ValidationSummary()

<div id="studentSignup" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    @using (@Html.BeginForm("StudentRegister", "Register"))
    {
        <h1>Student Signup</h1>
        <div class="student-editor">
            @Html.EditorFor(stu => stu.Item1)
            <input type="submit" value="submit" />
            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                <a href="#" onClick="$('#studentSignup').hide(); $('#lecturerSignup').show()">
                    Are you a Lecturer?
                </a>
            </div>
        </div>
    }
</div>

<div id="lecturerSignup" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    @using (@Html.BeginForm("LecturerRegister", "Register"))
    {
        <h1>Lecturer Signup</h1>
        <div class="lecturer-editor">
            @Html.EditorFor(lec => lec.Item2)
            <input type="submit" value="submit" />
        </div>
        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
            <a href="#" onClick="$('#lecturerSignup').hide(); $('#studentSignup').show()">
                Are you a Student?
            </a>
        </div>
    }
</div>

