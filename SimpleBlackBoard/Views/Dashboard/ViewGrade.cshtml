@model SimpleBlackBoard.Models.Assignment
@{
    ViewBag.Title = "View";
}

<div class="row LoginHeader text-center">
    <h2>Your Result</h2>
</div>

<div class="assignment-display">
    <div class="row">
        <div class="row text-center" style="background-color:lightgray">
            <div class="col-xs-6">
                <h3>Your Student ID</h3>
            </div>  
            <div class="col-xs-6">
                <span style="font-size:34px;color:red"> @Html.DisplayFor(m => m.Student_ID)</span>
            </div>
        </div>
        <br />
        <div class="row text-center" style="background-color:lightgray">
            <div class="col-xs-6">
                <h3>@Html.LabelFor(m => m.Grade)</h3>
            </div>
            <div class="col-xs-6">
                <span style="font-size:34px;color:red"> @Html.DisplayFor(m => m.Grade)</span>
            </div>
        </div>
        <br/>
        <div class="row text-center" style="background-color:lightgray">
            <div class="col-xs-12">
                <h3>@Html.LabelFor(m => m.Feedback)</h3>
            </div>
            <div class="col-xs-12">
                <span style="font-size:12px;color:red;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif"> @Html.DisplayFor(m => m.Feedback)</span>
            </div>
        </div>
        
             
    </div>
    
    
    @*@Html.DisplayForModel(Model)*@
</div>

